@page
@model CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Add New Expense</h2>

<form method="post">
    <div>
        <label asp-for="Expense.description"></label>
        <input asp-for="Expense.description" />
    </div>

    <div>
        <label asp-for="Expense.amount"></label>
        <input asp-for="Expense.amount" type="number" step="0.01" />
    </div>

    <div>
        <label asp-for="Expense.expense_date"></label>
        <input asp-for="Expense.expense_date" type="date" />
    </div>

    <div>
        <label asp-for="Expense.category_id">Category</label>
        <select asp-for="Expense.category_id" asp-items="Model.CategoryOptions"></select>
    </div>

    <div>
        <label asp-for="Expense.user_id">User</label>
        <select asp-for="Expense.user_id" asp-items="Model.UserOptions"></select>
    </div>

    <button type="submit">Save Expense</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
